extends layout

block content

  h1 #{title}

  h2 Name
  p= item.name

  h2 Description
  p= item.description

  hr

  p Do you really want to delete this Item?

  form(method='POST')
    div.form-group
    input#authorid.form-control(type='hidden', name='itemid', value=item._id )

    button.btn.btn-primary(type='submit') Delete
