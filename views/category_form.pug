extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='name') Category Name:
      input#name.form-control(type='text', placeholder='Adventure, Strategy etc.' name='name' required value=(undefined===category ? '' : category.name) )
    div.form-group
      label(for='name') Category Description:
      input#name.form-control(type='text', placeholder='Focused on adventure, tactical play, mystery etc.' name='description' required value=(undefined===category ? '' : category.description) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
